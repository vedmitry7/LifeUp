<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vedmitryapps.lifeup">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.EnterActivity" />
        <activity android:name=".activities.StatusActivity" />
        <activity
            android:name=".activities.CommentsActivity"
            android:label="@string/title_activity_comments"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.UsersOnlineActivity"
            android:label="@string/title_activity_users_online"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.DialogActivity"></activity>
    </application>

</manifest>