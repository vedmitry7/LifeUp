<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vedmitryapps.lifeup.activities.UsersOnlineActivity"
    tools:showIn="@layout/app_bar_users_online">



 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:src="@drawable/dibil"
             android:layout_marginTop="4dp"
             android:layout_marginLeft="16dp"
             android:id="@+id/imageView"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <LinearLayout
             android:layout_marginLeft="16dp"
             android:layout_toRightOf="@+id/imageView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:gravity="center_vertical"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Эдик" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/name"
                 android:layout_toRightOf="@+id/imageView"
                 android:text="24 года, Украина, Кривой Рог" />

         </LinearLayout>

         <View
             android:layout_marginTop="4dp"
             android:layout_below="@+id/imageView"
             android:background="@android:color/black"
             android:layout_width="match_parent"
             android:layout_height="1px"/>

     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:src="@drawable/izv"
             android:layout_marginTop="4dp"
             android:layout_marginLeft="16dp"
             android:id="@+id/imageView"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <LinearLayout
             android:layout_marginLeft="16dp"
             android:layout_toRightOf="@+id/imageView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:gravity="center_vertical"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Roger Coony" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/name"
                 android:layout_toRightOf="@+id/imageView"
                 android:text="42 года, Украина, Киев" />

         </LinearLayout>

         <View
             android:layout_marginTop="4dp"
             android:layout_below="@+id/imageView"
             android:background="@android:color/black"
             android:layout_width="match_parent"
             android:layout_height="1px"/>

     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:src="@drawable/ava"
             android:layout_marginTop="4dp"
             android:layout_marginLeft="16dp"
             android:id="@+id/imageView"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <LinearLayout
             android:layout_marginLeft="16dp"
             android:layout_toRightOf="@+id/imageView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:gravity="center_vertical"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Animal Cruel" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/name"
                 android:layout_toRightOf="@+id/imageView"
                 android:text="3 года, Украина, Львов" />

         </LinearLayout>

         <View
             android:layout_marginTop="4dp"
             android:layout_below="@+id/imageView"
             android:background="@android:color/black"
             android:layout_width="match_parent"
             android:layout_height="1px"/>

     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:src="@drawable/barat"
             android:layout_marginTop="4dp"
             android:layout_marginLeft="16dp"
             android:id="@+id/imageView"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <LinearLayout
             android:layout_marginLeft="16dp"
             android:layout_toRightOf="@+id/imageView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:gravity="center_vertical"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Sacha Noam Baron Cohen" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/name"
                 android:layout_toRightOf="@+id/imageView"
                 android:text="46 лет, Хаммерсмит, Лондон, Великобритания" />

         </LinearLayout>

         <View
             android:layout_marginTop="4dp"
             android:layout_below="@+id/imageView"
             android:background="@android:color/black"
             android:layout_width="match_parent"
             android:layout_height="1px"/>

     </RelativeLayout>


 </LinearLayout>

</android.support.constraint.ConstraintLayout>
